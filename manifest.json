{
	"manifest_version": 2,
	
	"name": "UVM Blackboard Save Username",
	"description": "Save netid when logging into Blackboard",
	"version": "0.1.0",
	"version_name": "0.1.0",

	"page_action" : {
		"default_icon" : "assets/small.png",
		"default_title" : "Save your netid", 
		"default_popup": "popup.html"
	},

	"permissions": [
		"declarativeContent", 
		"activeTab",
		"storage", 
		"tabs"
	], 
	"background": {
		"scripts": [
			"lib/jquery-min.js", 
			"background.js"
		]
	}, 
	"content_scripts": [{
		"matches": ["<all_urls>", "https://*/*", "http://*/*"], 
		"js": ["content-script.js"]
		}
	],

	"icons" : {
		"48" : "assets/small.png"
	}
}